# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Stories
# TODO Switch to GET, POST, PUT, DELETE
GET     /stories                    controllers.StoryController.index
POST    /stories                    controllers.StoryController.create
POST    /stories/:id/delete         controllers.StoryController.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Misc
# TODO Redirect all other pages here
GET     /pageNotFound               controllers.Application.pageNotFound
