# Routes
# This file defines stories application routes (Higher priority routes first)
# ~~~~

# Stories
GET     /                                       controllers.StoryController.index(path: String ?= "")
GET     /page/stories/*path                     controllers.StoryController.index(path: String)

GET     /stories/list.json                      controllers.StoryController.allJson
GET     /stories/story.json                     controllers.StoryController.storyJson(path: String ?= "")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)